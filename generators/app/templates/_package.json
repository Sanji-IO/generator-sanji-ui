{
  "name": "<%= appname %>",
  "author": "<%= realname %> <<%= email %>>",
  "version": "1.0.0",
  "main": "index",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:once && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "test": "NODE_ENV=test karma start",
    "test:once": "karma start",
    "test:e2e": "NODE_ENV=test npm run phantom && npm run protractor",
    "phantom": "phantomjs --webdriver=4444 & npm config set <%= appname %>:phantomjspid $!",
    "protractor": "protractor protractor.conf.js && kill $npm_package_config_phantomjspid",
    "prebuild": "rm -rf <%= uuid %> && mkdir <%= uuid %>",
    "build": "NODE_ENV=production webpack --config webpack.build.js --display-modules",
    "postbuild": "cp ./app/component/component.resource.json ./<%= uuid %>/ && tar zcvf <%= uuid %>.tar.gz ./<%= uuid %>",
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 90 --branches 90 --functions 90 --lines 90",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "NODE_ENV=development node server/dev-server.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "angular-mocks": "~1.5.0",
    "autoprefixer-loader": "~3.2.0",
    "babel-core": "^6.0.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.0.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-runtime": "^6.6.1",
    "chai": "~3.5.0",
    "commitizen": "^2.8.0",
    "css-loader": "~0.23.1",
    "cucumber": "~0.7.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^2.0.0",
    "eslint-loader": "^1.3.0",
    "expose-loader": "~0.7.1",
    "extract-text-webpack-plugin": "~1.0.1",
    "file-loader": "~0.9.0",
    "ghooks": "^1.2.0",
    "html-webpack-plugin": "~1.7.0",
    "json-loader": "~0.5.4",
    "isparta-loader": "~2.0.0",
    "istanbul": "~0.4.2",
    "karma": "~0.13.19",
    "karma-chai-plugins": "~0.7.0",
    "karma-coverage": "~1.0.0",
    "karma-mocha": "~1.0.1",
    "karma-phantomjs-launcher": "~1.0.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "~1.7.0",
    "ng-annotate-loader": "~0.1.0",
    "ng-cache-loader": "~0.0.15",
    "node-bourbon": "~4.2.3",
    "node-sass": "~3.8.0",
    "protractor": "~2.5.1",
    "raw-loader": "~0.5.1",
    "sass-loader": "~3.2.0",
    "semantic-release": "^6.2.0",
    "style-loader": "~0.13.0",
    "url-loader": "~0.5.7",
    "webpack": "^1.13.0",
    "webpack-dev-server": "~1.14.1"
  },
  "keywords": [
    "sanji"
  ],
  "license": "MIT",
  "dependencies": {
    "sanji-core-ui": "~1.15.3"
  }
}
