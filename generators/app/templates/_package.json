{
  "name": "<%= appname %>",
  "author": "<%= realname %> <<%= email %>>",
  "version": "0.0.0",
  "main": "index",
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec 'npm run validate'"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "validate": "npm run test:once && npm run check-coverage",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test karma start",
    "test:e2e": "npm run protractor",
    "test:once": "cross-env BABEL_ENV=test karma start",
    "protractor": "protractor protractor.conf.js",
    "prebuild": "rimraf <%= uuid %> && mkdir <%= uuid %>",
    "build": "cross-env NODE_ENV=production webpack --config webpack.build.js --display-modules",
    "postbuild": "cp ./app/component/component.resource.json ./<%= uuid %>/ && tar zcvf <%= uuid %>.tar.gz ./<%= uuid %>",
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "cross-env NODE_ENV=development node server/dev-server.js",
    "release": "standard-version",
    "post-install": "webdirver-manager update"
  },
  "devDependencies": {
    "angular-mocks": "~1.5.0",
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-lodash": "^3.2.4",
    "babel-preset-es2015": "^6.13.2",
    "chai": "~3.5.0",
    "commitizen": "^2.8.0",
    "cross-env": "~2.0.1",
    "css-loader": "^0.25.0",
    "cucumber": "~0.7.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^3.2.2",
    "eslint-loader": "^1.5.0",
    "expose-loader": "~0.7.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.3",
    "file-loader": "~0.9.0",
    "ghooks": "^1.3.2",
    "html-webpack-plugin": "^2.22.0",
    "istanbul": "~0.4.4",
    "json-loader": "~0.5.4",
    "karma": "^1.1.2",
    "karma-chai-plugins": "~0.7.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.26",
    "karma-webpack": "^1.8.0",
    "lodash-webpack-plugin": "^0.10.0",
    "mocha": "^3.0.2",
    "ng-annotate-loader": "~0.1.0",
    "ng-cache-loader": "~0.0.15",
    "node-bourbon": "~4.2.3",
    "node-sass": "~3.9.0",
    "opt-cli": "^1.5.1",
    "postcss-loader": "^0.13.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "protractor": "~2.5.1",
    "raw-loader": "~0.5.1",
    "rimraf": "~2.5.4",
    "sass-loader": "~4.0.0",
    "standard-version": "^2.4.0",
    "style-loader": "~0.13.0",
    "url-loader": "~0.5.7",
    "webpack": "^2.1.0-beta.21",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "keywords": [
    "sanji"
  ],
  "license": "MIT",
  "dependencies": {
    "sanji-core-ui": "~1.17.2"
  }
}
