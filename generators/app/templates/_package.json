{
  "name": "<%= appname %>",
  "author": "<%= realname %> <<%= email %>>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "index",
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec 'npm run validate'"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "validate": "npm run test:once && npm run check-coverage",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test karma start",
    "test:e2e": "npm run protractor",
    "test:once": "cross-env BABEL_ENV=test karma start",
    "protractor": "protractor protractor.conf.js",
    "prebuild": "rimraf <%= uuid %> && mkdir <%= uuid %>",
    "build": "cross-env NODE_ENV=production webpack --config webpack.build.js --display-modules",
    "postbuild": "cpy ./src/component/component.resource.json ./<%= uuid %>/ && targz compress ./<%= uuid %> <%= uuid %>.tar.gz",
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "report-coverage": "catw ./coverage/lcov.info -o | codecov",
    "start": "cross-env NODE_ENV=development node server/dev-server.js",
    "release": "standard-version"
  },
  "devDependencies": {
    "angular-mocks": "~1.5.0",
    "catw": "^1.0.1",
    "cpy-cli": "^1.0.1",
    "sanji-common-devs-ui": "~1.0.4",
    "standard-version": "^4.0.0",
    "tar.gz": "^1.0.5"
  },
  "keywords": [
    "sanji"
  ],
  "license": "MIT",
  "dependencies": {
    "sanji-core-ui": "~1.17.20"
  }
}